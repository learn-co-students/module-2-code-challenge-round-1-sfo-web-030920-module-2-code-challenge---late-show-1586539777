<h1>Add Guest Appearance</h1>

<% if @appearance.errors.any? %>
    <h2>Errors: </h2>
    <ul>
        <% @appearance.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @appearance do |f| %>
    <p><%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %></p>

    <p><%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %></p>

    <p><%= f.label :rating %>
    <%= f.number_field :rating %></p>
    
    <%= f.submit %>
<% end %>